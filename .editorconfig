# https://editorconfig.org/

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
max_line_length = 79

[*.html]
indent_size = 2

[*.{json,min.js}]
indent_size = 2
insert_final_newline = ignore
